<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div style="width: 60%; margin: 30px auto">
            <h1>SignUp</h1>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label>UserName:</label>
                    <input class="form-control" type="text" name="username" id="" placeholder="User Name" />
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input class="form-control" type="password" name="password" id="" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label for="isTeacher">Are you a Teacher?</label>
                    <input class="form" type="checkbox" name="isTeacher" value="true" />
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Sign Up" />
                </div>
            </form>
            <a href="/khojo">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>