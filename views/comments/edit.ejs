<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 40%; margin: 30px auto">
            <form action="/khojo/<%= question_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" id="" value="<%= comment.text %>" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Submit!" />
                </div>
            </form>
            <a href="/khojo">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>